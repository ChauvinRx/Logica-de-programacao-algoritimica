algoritmo "07- Dobro_Terça_parte"
var
   num, dobro, terP: real
inicio
      Escreval("Escreva um número do tipo real ou inteiro: ")
      leia(num)
      dobro <- num*2
      terP <- num/3
      
      Escreval("O dobro de ", num, " é ", dobro)
      Escreval("A terça parte de ", num, " é ", terP)
fimalgoritmo